generator client {
  provider = "prisma-client-js"
  output   = "../generated/prismahttps://grok.com/share/c2hhcmQtMw%3D%3D_52f51b14-681a-49fa-a6b5-67a16e01e30d"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:nexus@localhost:7777/psych_db?schema=public"
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  role      Role     @default(PATIENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  therapistProfile TherapistProfile?
}

model TherapistProfile {
  id              Int             @id @default(autoincrement())
  userId          Int             @unique
  specializations Specialzation[]
  bio             String?
  user            User            @relation(fields: [userId], references: [id])
}

model Specialzation {
  id               Int                @id @default(autoincrement())
  name             String             @unique
  therapistProfile TherapistProfile[]
}

enum Role {
  THERAPIST
  PATIENT
  ADMIN
}
